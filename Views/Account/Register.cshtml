@model TedAzApp.Models.ViewModels.RegisterViewModel
@{ ViewData["Title"] = "Home Page";
    Layout = ""; }
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>@ViewData["Title"] - TedAz</title>
    @*<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/site.css" />*@

    <link href="~/styles/css/style.css" rel="stylesheet" />
    <title>Tedaz</title>
</head>
<body>
    <div class="container h-100 ">
        <div class="row h-100 justify-content-center align-items-center">
            <div class="col-md-4 ">
                <div class="sign-form">
                    <div class="sign-form__header">
                        <p>Sign Up</p>
                        <div class="sign-form__logo">
                            <img src="~/img/5-layers.png" alt="">
                        </div>
                    </div>
                    <div class="sign-form__body">

                        <form id="main-form"  asp-controller="Account" asp-action="Register">
                            <ul>
                                <li>

                                    <input placeholder="Email" type="text" id="email" name="email" asp-for="Email">
                                    <span asp-validation-for="Email"></span>
                                </li>
                                <li>
                                    <input placeholder="Password" type="password" id="password" name="password" asp-for="Password">
                                    <span asp-validation-for="Password"></span>
                                </li>
                                <li>
                                    <input placeholder="Password Confirm" type="password" id="passwordconfirm" name="passwordconfirm" asp-for="PasswordConfirm">
                                    <span asp-validation-for="PasswordConfirm"></span>
                                </li>
                            </ul>

                        </form>
                    </div>

                    <div class="accept-privacy">
                        <div class="accept-privacy__check">
                            <img src="~/img/check-mark.png" alt="checked">
                        </div>
                        <span>
                            I accept the
                        </span>
                        <a href="#">
                            Terms of Use & Privacy Policy
                        </a>
                    </div>
                    <button form="main-form" class="sign-form-button" type="">
                        <img src="~/img/5-layers (1).png" alt="accept">
                    </button>
                    <div class="sign-form__question">
                        <p>
                            Already have an account?
                        </p>
                        <a asp-controller="Account" asp-action="Login">Sign In</a>
                    </div>


                </div>
            </div>
        </div>
    </div>



    <script src="~/js/extra/m-jquery.min.js"></script>
    <script src="~/js/extra/m-popper.min.js"></script>
    <script src="~/js/extra/m-bootstrap.min.js"></script>
    <script src="~/js/extra/bootstrap-select.min.js"></script>
    <script src="~/js/extra/date-time-picker.js"></script>


    <!-- <script src="js/main/script.js"></script> -->
</body>
</html>