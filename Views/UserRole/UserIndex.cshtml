@model IEnumerable<TedAzApp.Models.User>
@{
    ViewBag.Title = "User List";
}

<a asp-action="UserCreate">Add User</a>

<table class="table">
    <tr><th>Email</th><th></th></tr>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.Email</td>
            <td>
                <form asp-action="UserDelete" asp-route-id="@user.Id" method="post">
                    <a class="btn btn-sm btn-primary" asp-action="UserEdit" asp-route-id="@user.Id">Change</a>
                    <a class="btn btn-sm btn-primary" asp-action="UserChangePassword" asp-route-id="@user.Id">Password change</a>
                    <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                </form>
            </td>
        </tr>
    }
</table>
